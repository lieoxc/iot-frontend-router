{
  "keyPattern": {
    "type": "nested",
    "separator": ".",
    "case": "camel"
  },
  "defaultNamespace": "common",

  "namespaceResolvers": [
    {
      "type": "file",
      "matches": "src/components/**/*",
      "resolve": "components"
    },
    {
      "type": "file",
      "matches": "src/views/device/**/*",
      "resolve": "device"
    },
    {
      "type": "file",
      "matches": "src/views/alarm/**/*",
      "resolve": "alarm"
    },
    {
      "type": "file",
      "matches": "src/views/dashboard/**/*",
      "resolve": "dashboard"
    },
    {
      "type": "file",
      "matches": "src/views/automation/**/*",
      "resolve": "automation"
    },
    {
      "type": "file",
      "matches": "src/views/management/**/*",
      "resolve": "management"
    },
    {
      "type": "file",
      "matches": "src/views/visualization/**/*",
      "resolve": "visualization"
    },
    {
      "type": "file",
      "matches": "src/views/personal-center/**/*",
      "resolve": "personalCenter"
    },
    {
      "type": "file",
      "matches": "src/views/_builtin/login/**/*",
      "resolve": "login"
    },
    {
      "type": "file",
      "matches": "src/components/panel/**/*",
      "resolve": "components.panel"
    },
    {
      "type": "file",
      "matches": "src/components/custom/**/*",
      "resolve": "components.custom"
    },
    {
      "type": "file",
      "matches": "src/card/builtin-card/**/*",
      "resolve": "card.builtin"
    },
    {
      "type": "file",
      "matches": "src/card/chart-card/**/*",
      "resolve": "card.chart"
    }
  ],

  "keyResolvers": [
    {
      "type": "callback",
      "matches": "src/views/device/**/*",
      "resolve": "page.device.${namespace}.${key}"
    },
    {
      "type": "callback",
      "matches": "src/views/alarm/**/*",
      "resolve": "page.alarm.${namespace}.${key}"
    },
    {
      "type": "callback",
      "matches": "src/views/dashboard/**/*",
      "resolve": "page.dashboard.${namespace}.${key}"
    },
    {
      "type": "callback",
      "matches": "src/components/**/*",
      "resolve": "components.${namespace}.${key}"
    },
    {
      "type": "callback",
      "matches": "src/card/**/*",
      "resolve": "card.${namespace}.${key}"
    },
    {
      "type": "callback",
      "matches": "src/views/_builtin/**/*",
      "resolve": "page.${namespace}.${key}"
    }
  ],

  "sourceLanguage": "zh-CN",
  "targetLanguages": ["en-US"],

  "sortKeys": true,
  "indentation": 2,

  "keepFulfilled": true,

  "translate": {
    "engines": ["google-cn"],
    "googleCredentials": null,
    "preferredEngine": "google-cn",
    "preferredLanguage": "en",
    "fallbackEngine": "google-cn"
  },

  "ignoreFiles": ["**/node_modules/**", "**/dist/**", "**/build/**", "**/*.d.ts"],

  "ignoreKeys": [
    "^\\d+$",
    "^[A-Z_]+$",
    "^https?://",
    "YYYY-MM-DD HH:mm:ss",
    "^[YMDHms: -]+$", // 匹配 YYYY-MM-DD HH:mm:ss
    "^\\d{4}-\\d{2}-\\d{2}", // 匹配具体日期
    "^\\d{2}:\\d{2}:\\d{2}" // 匹配具体时间
  ],

  "baseLocale": {
    "path": "src/locales/langs/en-us.ts",
    "type": "ts"
  },

  "locales": {
    "en-US": {
      "path": "src/locales/langs/en-us.ts",
      "type": "ts"
    },
    "zh-CN": {
      "path": "src/locales/langs/zh-cn.ts",
      "type": "ts"
    }
  },

  "termBase": {
    "设备": "device",
    "告警": "alarm",
    "仪表盘": "dashboard",
    "自动化": "automation",
    "可视化": "visualization",
    "管理": "management",
    "配置": "configuration",
    "模板": "template"
  }
}
